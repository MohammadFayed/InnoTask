@page "{courseId:int?}"
@model InnoTechApp.Pages.Courses.EditModel
@{
    ViewData["title"] = "Edit Course";
}

<form method="post">
    <input type="hidden" asp-for="Course.CourseId"/>
    <div class="form-group">
        <label asp-for="Course.Name"></label>
        <input class="form-control" asp-for="Course.Name"/>
        <span class="text-danger" asp-validation-for="Course.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Course.Price"></label>
        <input class="form-control" asp-for="Course.Price"/>
        <span class="text-danger" asp-validation-for="Course.Price"></span>
    </div>
    <div class="form-group">
        <label asp-for="Course.Description"></label>
        <input class="form-control" asp-for="Course.Description"/>
        <span class="text-danger" asp-validation-for="Course.Description"></span>
    </div>
    <input type="submit" class="btn btn-success"/>
</form>
@section Scripts
{
    <partial name="Shared/_ValidationScriptsPartial"/>
}
